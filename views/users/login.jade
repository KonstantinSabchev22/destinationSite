extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h2 Влизане
                if message
                    .alert.alert-danger(role='alert')
                        | #{message}
                form(action='/users/login' method='POST')
                    .input-container
                    i.fa.fa-user.icon
                    input.input-field(type="text", placeholder="Username", name="usrnm")

                    .input-container
                    i.fa.fa-envelope.icon
                    input.input-field(type="text", placeholder="Email", name="email")

                    .input-container
                    i.fa.fa-key.icon
                    input.input-field(type="password", placeholder="Password", name="psw")

                    button.btn(type="submit") Register