extends ../layout

block content
  h1 All Places
  .container
    .row
        each place in places
            .col-lg-4.col-md-6.col-sm-12
                .card(style='width: 18rem;')
                    img.card-img-top(src=place.imageUrl alt='...')
                    .card-body
                        h5.card-title= place.name
                        p.card-text= place.description.substr(1, 100)
                        a.btn.btn-primary(href=`/places/${place.id}`) Go somewhere